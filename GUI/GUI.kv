#:kivy 2.0.0

<BackgroundColor@Widget>
    background_color: 0.5, 0, 0, 0.5
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<Tooltip@Label+BackgroundColor>
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0
    text: "Enterprise acronimo"
    size: self.texture_size[0] + 10, self.texture_size[1] + 10
    pos: -100, -100

<EnterpriseLabel>:
    tooltip: tooltip
    text: 'USS E.N.T.E.R.P.R.I.S.E.'
    font_size: 30 
    size_hint_x: 0.8
    Tooltip:
        id: tooltip

<Container>:
    orientation: 'vertical'
    display_btn: display_btn
    connect_btn: connect_btn
    start_btn: start_btn
    stop_btn: stop_btn
    five_btn: five_btn
    ten_btn: ten_btn
    image: image
    debug_label: _debug_label
    padding: 5
    spacing: 5

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        spacing: 5
        Image:
            source:  r'images/uss.png'
            size_hint_x: 0.3
        EnterpriseLabel:
            id: enterpriseLabel
            
        Button:
            id: connect_btn
            size_hint_x: 0.2
            text: 'Connect'
            #on_press: root.button_pressed_callback()
            on_press: root.threading_connection()

    BoxLayout:
        orientation:'horizontal'
        size_hint_y: 1
        Image:
            id: image
            source: 'images/danger.zip'

    GridLayout:
        cols: 7
        size_hint_y: 0.15
        Label:
            text: 'Step angle'
            font_size: 20
        Button:
            id: five_btn
            text:'5'
            on_press: root.threading_step('f')
            disabled: True
        Button:
            id: ten_btn
            text:'10'
            on_press: root.threading_step('t')
            disabled: True
        Label:
            text:
        Button:
            id: start_btn
            background_color: (36/255, 252/255, 3/255, 1) 
            text:'Start'
            on_press: root.threading_start()
            disabled: True
        Button:
            id: stop_btn            
            background_color: (252/255, 3/255, 3/255, 1) 
            text:'Stop'
            on_press: root.threading_stop()
            disabled: True

    GridLayout:
        cols:3
        size_hint_y: 0.15
        Label:
            text:
        Button:
            id: display_btn
            size_hint_x: 0.8
            text: 'Display'
            on_press: root.threading_display()
            disabled: True
        Label:
            text:
    
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.1
        Label:
            id: _debug_label
            size_hint_y: 0.2
            text: 'Connection status'

